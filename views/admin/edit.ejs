<%- include ./public/header.ejs%>

<div class="container-fluid">
    <div class="row">
        <%- include ./public/list.ejs%>
        <div class="col-sm-10">
            <ol class="breadcrumb">
                <li class="active">管理员管理
                </li>
                <li class="active">管理员列表
                </li>
            </ol>
            <div class="panel panel-default">

                <div class="panel-heading">
                    增加管理员
                </div>
                <div class="panel-body">
                    <div class="table-responsive input-form">
                        <form action="/admin/doEdit" method="post" enctype="multipart/form-data">
                            <ul>
                                <input type="hidden" value="<%=list._id%>" name="id"/>
                                <li>  管理员名称: <input type="text" name="title" value="<%=list.title%>"/></li>

                                <li>  管理员图片: <input type="file" name="pic" value="/<%=list.img%>"/></li>
                                <li>  管理员密码: <input type="text" name="price" value="<%=list.price%>"/></li>
                                <li>  管理员性别: <input type="text" name="fee" value="<%=list.fee%>"/></li>

                                <li>
                                    管理员状态:
                                    <textarea name="description" id="" cols="60" rows="8"><%=list.description%></textarea>
                                </li>

                                <li>
                                    <br/>
                                    <button type="submit" class="btn btn-default">提交</button>
                                </li>

                            </ul>


                        </form>
                    </div>
                </div>


            </div>

        </div>
    </div>
</div>

</body>
</html>