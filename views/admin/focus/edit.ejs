<%- include ./public/header.ejs%>

<div class="container-fluid">
    <div class="row">
        <%- include ../public/list.ejs%>
        <div class="col-sm-10">
            <ol class="breadcrumb">
                <li class="active">商品管理
                </li>
                <li class="active">商品列表
                </li>
            </ol>
            <div class="panel panel-default">
              
			    <div class="panel-heading">
                  增加商品
                </div>
                <div class="panel-body">
                    <div class="table-responsive input-form">
                        <form action="/admin/focus/doEdit" method="post" enctype="multipart/form-data">
                            <ul>
                                <input type="hidden" value="<%=list[0]._id%>" name="id"/>
                                <li>  名称: <input type="text" name="title" value="<%=list[0].title%>"/></li>
                                <br>
                                <li>  图片: <input type="file" name="pic" /></li>
                                <img src="/<%=list[0].pic%>" width="80" height="80">
                                <br>
                                <li>  作者: <input type="text" name="author" value="<%=list[0].author%>"/></li>
                                <br>
                                <li>  地址: <input type="text" name="url"  value="<%=list[0].url%>" /></li>
                                <br>
                                <li>  时间: <input type="text" name="addtime" value="<%=list[0].addtime%>"/></li>
                                <br>
                                <li>  状态: <input type="text" name="status" value="<%=list[0].status%>"/></li>

                                <li>
                                    商品描述:
                                    <textarea name="description" id="" cols="60" rows="8"><%=list[0].description%></textarea>
                                </li>

                                <li>
                                    <br/>
                                    <button type="submit" class="btn btn-default">提交</button>
                                </li>

                            </ul>


                        </form>
                    </div>
                </div>


            </div>

        </div>
    </div>
</div>

</body>
</html>