<%- include ./public/header.ejs%>

<div class="container-fluid">
    <div class="row">

        <%- include ../public/list.ejs%>
        <div class="col-sm-10">
            <ol class="breadcrumb">
                <li class="active">反馈管理
                </li>
                <li class="active">反馈列表
                </li>
            </ol>
            <div class="panel panel-default">
                <div class="panel-heading">
                    搜索
                </div>
                <div class="panel-body">
                    <form role="form" class="form-inline">
                        <div class="form-group">
                            <label for="name">名称</label>
                            <input type="text" class="form-control" id="name" placeholder="请输入名称">
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-default">开始搜索</button>
                        </div>
                    </form>
                </div>
            </div>
            <!--
                列表展示
            -->
            <div class="table-responsive">
                <table class="table table-striped ">
                    <thead>
                    <tr>
                        <th>编号</th>
                        <th>状态</th>
                        <th>姓名</th>
                        <th>电话</th>
                        <th>姓名</th>
                       
                        <th class="text-center">操作</th>
                    </tr>
                    </thead>
                    <tbody>

                    <%for(var i=0;i<list.length;i++){%>
                    <tr>
                        <td><%= i+1%></td>
                        <td><%= list[i].status%></td>
                        <td><%= list[i].username%></td>
                        <td><%= list[i].tel%></td>
                        <td><%= list[i].sex%></td>

                        <td class="text-center"><a href="/admin/advice/edit?id=<%= list[i]._id%>" class="btn btn-success">编辑</a> <a href="/admin/advice/delete?id=<%= list[i]._id%>" class="btn btn-danger">删除</a> </td>
                    </tr>
                    <%}%>

                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>

</body>
</html>