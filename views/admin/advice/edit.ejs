<%- include ./public/header.ejs%>

<div class="container-fluid">
    <div class="row">
        <%- include ../public/list.ejs%>
        <div class="col-sm-10">
            <ol class="breadcrumb">
                <li class="active">反馈管理
                </li>
                <li class="active">反馈列表
                </li>
            </ol>
            <div class="panel panel-default">
              
			    <div class="panel-heading">
                  增加反馈
                </div>
                <div class="panel-body">
                    <div class="table-responsive input-form">
                        <form action="/admin/advice/doedit" method="post">
                            <input type="hidden" name="id" value="<%= list._id%>" />
                            <ul>
                                <li>  反馈人: <input type="text" name="username" value="<%= list.username%>" /></li>
                                <br>
                                <li>  反馈电话: <input type="text" name="tel" value="<%= list.tel%>" /></li>
                                <br>
                                <li>  反馈时间: <input type="text" name="addtime" value="<%= list.addtime%>" /></li>
                                <br>
                                <li>  状态: <input type="text" name="status" value="<%= list.status%>" /></li>
                                <br>
                                <li>
                                    反馈内容:
                                    <textarea name="content"  cols="60" rows="8">
                                        value="<%= list.content%>"
                                    </textarea>
                                </li>
                                <li>
                                    <br/>
                                    <button type="submit" class="btn btn-default">提交</button>
                                </li>

                            </ul>


                        </form>
                    </div>
                </div>


            </div>

        </div>
    </div>
</div>

</body>
</html>