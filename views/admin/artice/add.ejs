<%- include ./public/header.ejs%>

<div class="container-fluid">
    <div class="row">
        <%- include ../public/list.ejs%>
        <div class="col-sm-10">
            <ol class="breadcrumb">
                <li class="active">新闻管理
                </li>
                <li class="active">新闻列表
                </li>
            </ol>
            <div class="panel panel-default">
              
			    <div class="panel-heading">
                  增加新闻
                </div>
                <div class="panel-body">
                    <div class="table-responsive input-form">
                        <form action="/admin/artice/doAdd" method="post" enctype="multipart/form-data">
                            <ul>
                                <li>  新闻标题: <input type="text" name="title"/></li>
                                <br>
                                <li>  新闻图片: <input type="file" name="pic"/></li>
                                <br>
                                <li>  新闻作者: <input type="text" name="author"/></li>
                                <br>
                                <li>  新闻内容: <input type="text" name="content"/></li>
                                <br>
                                <li>  发表时间: <input type="text" name="addtime"/></li>
                                <br>
                                <li>  状态: <input type="text" name="status"/></li>
                                <br>
                                <li>
                                    新闻描述:
                                    <textarea name="description"  cols="60" rows="8"></textarea>
                                </li>

                                <li>
                                    <br/>
                                    <button type="submit" class="btn btn-default">提交</button>
                                </li>

                            </ul>


                        </form>
                    </div>
                </div>


            </div>

        </div>
    </div>
</div>

</body>
</html>