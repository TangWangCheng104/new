<%- include ./public/header.ejs%>

<div class="container-fluid">
    <div class="row">

        <%- include ../public/list.ejs%>

        <div class="col-sm-10">
            <ol class="breadcrumb">
                <li class="active">新闻管理
                </li>
                <li class="active">新闻列表
                </li>
            </ol>
            <div class="panel panel-default">
              
			    <div class="panel-heading">
                  增加新闻
                </div>
                <div class="panel-body">
                    <div class="table-responsive input-form">
                        <form action="/admin/artice/doedit" method="post"  enctype="multipart/form-data">
                            <input type="hidden" name="id" value="<%= list._id%>" />
                            <ul>
                                <li>  新闻标题: <input type="text" name="title" value="<%= list.title%>" /></li>
                                <br>
                                <li>  新闻图片: <input type="file" name="pic"  /></li>
                                <img src="/<%= list.pic%>" width="80" height="80">
                                <br>
                                <li>  新闻作者: <input type="text" name="author"  value="<%= list.author%>" /></li>
                                <br>
                                <li>  新闻内容: <input type="text" name="content"  value="<%= list.content%>" /></li>
                                <br>
                                <li>  发表时间: <input type="text" name="addtime"  value="<%= list.addtime%>" /></li>
                                <br>
                                <li>  状态: <input type="text" name="status"  value="<%= list.status%>" /></li>
                                <br>
                                <li>
                                    新闻描述:
                                    <textarea name="description" cols="60" rows="8">
                                        <%= list.description%>
                                    </textarea>
                                </li>

                                <li>
                                    <br/>
                                    <button type="submit" class="btn btn-default">提交</button>
                                </li>

                            </ul>


                        </form>
                    </div>
                </div>


            </div>

        </div>
    </div>
</div>

</body>
</html>