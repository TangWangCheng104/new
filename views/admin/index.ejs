<%- include ./public/header.ejs%>

<div class="container-fluid">
    <div class="row">

        <%- include ./public/list.ejs%>
        <div class="col-sm-10">
            <ol class="breadcrumb">
                <li class="active">管理员管理
                </li>
                <li class="active">管理员列表
                </li>
            </ol>
            <div class="panel panel-default">
                <div class="panel-heading">
                    搜索
                </div>
                <div class="panel-body">
                    <form role="form" class="form-inline">
                        <div class="form-group">
                            <label for="name">名称</label>
                            <input type="text" class="form-control" id="name" placeholder="请输入名称">
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-default">开始搜索</button>
                        </div>
                    </form>
                </div>
            </div>
            <!--
                列表展示
            -->
            <div class="table-responsive">
                <table class="table table-striped ">
                    <thead>
                    <tr>
                        <th>管理员编号</th>
                        <th>管理员图标</th>
                        <th>管理员名称</th>
                        <th>管理员密码</th>
                        <th>管理员性别</th>
                        <th>管理员状态</th>
                        <th class="text-center">操作</th>
                    </tr>
                    </thead>
                    <tbody>
                    <%for(var i=0;i<list.length;i++){%>
                    <tr>
                        <td><%=i+1%></td>
                        <td><img src="/<%=list[i].img%>" alt="" title="" style="width: 50px;height: 30px"></td>
                        <td><%=list[i].title%></td>
                        <td><%=list[i].price%></td>
                        <td><%=list[i].fee%></td>
                        <td><%=list[i].description%></td>

                        <td class="text-center">
                            <a href="/admin/edit?id=<%=list[i]._id%>" class="btn btn-success">编辑</a>
                            <a href="/admin/delete?id=<%=list[i]._id%>" class="btn btn-danger">删除</a>
                        </td>
                    </tr>
					<%}%>

                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>

</body>
</html>