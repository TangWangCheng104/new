<%- include ./public/header.ejs%>

<div class="container-fluid">
    <div class="row">
        <%- include ./public/list.ejs%>
        <div class="col-sm-10">
            <ol class="breadcrumb">
                <li class="active">管理员管理
                </li>
                <li class="active">管理员列表
                </li>
            </ol>
            <div class="panel panel-default">
              
			    <div class="panel-heading">
                  增加管理员
                </div>
                <div class="panel-body">
                    <div class="table-responsive input-form">
                        <form action="/admin/doAdd" method="post"  enctype="multipart/form-data">
                            <ul>
                                <li>  管理员名称: <input type="text" name="title"/></li>

                                <li>  管理员图片: <input type="file" name="pic"/></li>
